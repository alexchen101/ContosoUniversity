<div class="containe" style="width:800px">
    <div class="row bg-secondary rounded-top" style="height:50px;">
        <div class="col text-light" style="height:50px;line-height:50px;">
            <span style="font-size:larger">聊天室</span>
        </div>
    </div>
    <div class="row border">
        <div class="col-9 border-right" style="height:500px">
            <div class="row border-bottom" style="height:360px">
                <ul id="messagesList"></ul>
            </div>
            <div class="row bg-light pl-2" style="height:30px">
                <a href="#" class="ml-2" title="表情">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-emoji-smile" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                        <path d="M4.285 9.567a.5.5 0 0 1 .683.183A3.498 3.498 0 0 0 8 11.5a3.498 3.498 0 0 0 3.032-1.75.5.5 0 1 1 .866.5A4.498 4.498 0 0 1 8 12.5a4.498 4.498 0 0 1-3.898-2.25.5.5 0 0 1 .183-.683zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5z" />
                    </svg>
                </a>
                <a href="#" class="ml-2" title="图片">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-image" viewBox="0 0 16 16">
                        <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                        <path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z" />
                    </svg>
                </a>
                <a href="#" class="ml-2" title="文件">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-file" viewBox="0 0 16 16">
                        <path d="M4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4zm0 1h8a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z" />
                    </svg>
                </a>
            </div>
            <div class="row align-top" style="height:80px">
                <textarea id="messageInput" class="col-12 border-0" style="resize: none;outline:none;" placeholder="在此输入..."></textarea>
            </div>
            <div class="row justify-content-end pr-2" style="height:30px">
                <button class="btn btn-dark btn-sm" id="sendButton">
                    发送
                </button>
            </div>
        </div>
        <div class="col-3" style="height:500px">
            <div class="row border-bottom" style="height:30px;line-height:30px;">
                <p class="text-black-50 ml-4" style="font-size:small;">
                    <span class="" style="height: 30px; line-height: 30px; ">成员列表</span>
                </p>
            </div>
            <div class="pl-2 row" style="font-size:small">
                @{
                    for (int i = 0; i < 5; i++)
                    {
                        <div class="m-1 col-11">@("往事随风" + i.ToString())</div>
                    }

                }
            </div>
        </div>
    </div>
</div>
<input id="userId" type="hidden" asp-for="UserID" />
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
